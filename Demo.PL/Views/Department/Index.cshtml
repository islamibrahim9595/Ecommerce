@model IEnumerable<DepartmentViewModel>


@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br />
<br />
<a asp-action="Create" asp-controller="Department" class="btn btn-success">Create New Department</a>
<br />

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">
        @TempData["Message"]
    </div>
}
<form class="my-3" asp-action="Index">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="search By Name" name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="search" class="btn btn-success btn-block" />
        </div>
    </div>

</form>
@if (Model.Count() > 0)
{
    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <partial name="_ButtonsPartialView" model="@department.Id">

                </tr>
            }

        </tbody>

    </table>
}
else
{
    <br />
    <div class="alert alert-warning">
        <p>There is No Department!</p>
    </div>
}


